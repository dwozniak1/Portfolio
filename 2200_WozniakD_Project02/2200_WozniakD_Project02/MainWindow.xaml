<Window x:Class="_2200_WozniakD_Project02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2200_WozniakD_Project02"
        mc:Ignorable="d"
        Title="Delaney's Nutrition App" Height="300" Width="490">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="cbFoods"
                  Margin="30"
                  FontSize="30"/>
        <Button x:Name="btnDetails"
                Content="Show Food Details"
                Grid.Row="1"
                Margin="30"
                Click="btnDetails_Click"
                FontSize="30"/>
    </Grid>
</Window>
